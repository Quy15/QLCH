<div class="row" style="padding-bottom:250px; column-gap: 150px;row-gap: 30px; display: flex; flex-wrap: nowrap">
    @foreach (var item in Model)
    {
        <div class="col-md-3 col-sm-12">
            <div class="card">
                <div style="width: 100%">
                    <img class="card-img-top img-fluid" src="@item.hinhAnh" alt="@item.tenSP">
                </div>
                <div class="card-body">
                    <h4 class="card-title">@item.tenSP</h4>
                    <h5 class="card-text">@string.Format("{0:#,0}", item.giaBan) VNĐ</h5>
                    @if (item.tinhTrang == true)
                    {
                        <p class="card-text badge bg-success">Còn hàng</p>
                    }
                    else
                    {
                        <p class="card-text badge bg-danger">Hết hàng</p>
                    }
                    <div style="margin-top: 5px;">
                        <a href="~/Products/Details?id=@item.id" class="btn btn-primary">Chi tiết</a>
                        <a href="javascript:;" class="btn btn-danger ">Thêm vào giỏ</a>
                        <form action="" style="padding: 10px">
                            <button type="submit" class="btn btn-primary btn-warning">Đặt ngay</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }
</div>


